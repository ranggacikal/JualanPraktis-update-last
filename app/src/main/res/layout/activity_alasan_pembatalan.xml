<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.akun.AlasanPembatalanActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAlasanPembatalan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgBackAlasanPembatalan"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/arialbold"
                android:gravity="center"
                android:text="Alasan Pembatalan"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linear_rincian_id"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/toolbarAlasanPembatalan"
        android:background="@color/grayDark"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Rincian Produk"
            android:layout_marginTop="10dp"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_id_pembatalan_status_transaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="#ID000000"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/text_tanggal_pembatalan_status_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="00 Desember 2020"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text_pembatalan_rincian_status_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="Status"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_pembatalan_garis"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/linear_rincian_id"
        android:scaleType="fitXY"
        android:src="@drawable/redline" />

    <LinearLayout
        android:id="@+id/linear_rincian_produk_pembatalan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_list_gray"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/img_pembatalan_garis">

        <ImageView
            android:id="@+id/img_barang_pembatalan"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_nama_barang_pembatalan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Barang"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Variasi Produk : Pakaian"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_harga_produk_pembatalan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Harga Produk : Rp. 000.000"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/text_harga_produk_pembatalan"
                    android:text="x2"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="15dp"
                    android:text="Rp. 000.000"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_harga_jual_pembatalan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Harga Produk : Rp. 000.000"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/text_harga_jual_pembatalan"
                    android:text="x2"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="15dp"
                    android:text="Rp. 000.000"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"/>

            </RelativeLayout>

            <View
                android:id="@+id/garis_grey_rincian_transaksi"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/toolbarRincianTransaksi"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_keuntungan_pembatalan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Keuntungan : Rp. 000.000"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/text_keuntungan_pembatalan"
                    android:text="x2"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"
                    android:text="Rp. 000.000"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/edt_masukan_alasan"
        android:layout_below="@+id/linear_rincian_produk_pembatalan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:hint="Masukan Alasan"
        android:background="@drawable/background_list_gray"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:lines="16"
        android:minLines="4"
        android:gravity="top|left"
        android:maxLines="17"
        android:scrollbars="vertical"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/edt_masukan_alasan">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/background_list_gray">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_baseline_add_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tambahkan Media"
                    android:textAlignment="center"
                    android:textSize="10sp"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/img_pembatalan_1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_launcher"/>

            <ImageView
                android:id="@+id/img_pembatalan_2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_launcher"/>

            <ImageView
                android:id="@+id/img_pembatalan_3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_launcher"/>

            <ImageView
                android:id="@+id/img_pembatalan_4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_launcher"/>

        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/linear_ajukan_pembatalan"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="AJUKAN PEMBATALAN"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="20sp"/>

    </LinearLayout>

</RelativeLayout>