<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/img_item_notifikasi"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="17dp"
            android:src="@drawable/profile_jualan"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_item_subject_notifikasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JualanPraktis"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                android:fontFamily="@font/nuunito_bold"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/text_item_deskripsi_notifikasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ayo ikuti tutorial gratis dari jualan praktis"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/nuunito_bold"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

</LinearLayout>