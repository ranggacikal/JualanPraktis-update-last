<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CEK EMAIL ANDA"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/nuunito_bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Kami telah mengirimkan pesan ke email yang dilengkapi dengan tautan untuk mengaktifkan akun Anda. ini membantu kami memverifikasi identitas Anda"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="12sp"
                android:fontFamily="@font/nuunito_bold"
                android:layout_marginBottom="40dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="25dp"/>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <ImageView
        android:id="@+id/logo_dialog"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:src="@drawable/profile_jualan" />

    <Button
        android:id="@+id/btn_done_dialog_check_email"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/background_button_circle_red"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="100dp"
        android:text="DONE"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/nuunito_bold"
        android:layout_below="@+id/logo_dialog"/>

</RelativeLayout>