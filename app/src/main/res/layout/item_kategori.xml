<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_kategori"
    android:layout_width="110dp"
    android:layout_height="110dp"
    android:layout_margin="2dp"
    android:layout_marginEnd="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="4dp">


    <androidx.cardview.widget.CardView
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:id="@+id/linear_item_kategori"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@mipmap/ic_logo_hitam_round" />

            <TextView
                android:id="@+id/title"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/nuunito_bold"
                android:maxLines="3"
                android:text="Fasion Pria,Wanita,Anak"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                tools:ignore="RtlCompat" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/new_indicatior"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_daftar"
        android:gravity="center"
        android:padding="2.3dp"
        android:text="New"
        android:textColor="@color/colorPrimary"
        android:textSize="8sp" />
</RelativeLayout>