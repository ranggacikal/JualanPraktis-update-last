<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_item_nama_rincian_semua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textSize="13sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_item_nohp_rincian_semua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="No HP"
        android:textSize="13sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_item_alamat_rincian_semua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Alamat"
        android:textSize="13sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_item_kodepos_rincian_semua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Kode Pos"
        android:layout_marginBottom="10dp"
        android:textSize="13sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Jenis Pembayaran : "
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/text_item_opsi_bayar_rincian_semua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="COD/Transfer"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:textSize="13sp"/>

</LinearLayout>