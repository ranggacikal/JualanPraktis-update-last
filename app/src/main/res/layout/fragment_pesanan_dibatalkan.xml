<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".feature.akun.PesananDibatalkanFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Potongan penghasilan"
            android:fontFamily="@font/nuunito_bold"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/redLight"/>

        <TextView
            android:id="@+id/text_total_potongan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 10.000.000"
            android:fontFamily="@font/nuunito_bold"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/redLight"/>

    </LinearLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerPenghasilanSayaBatal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingBottom="10dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/shimmer_linear_item"/>
            <include layout="@layout/shimmer_linear_item"/>
            <include layout="@layout/shimmer_linear_item"/>
            <include layout="@layout/shimmer_linear_item"/>
        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <TextView
        android:id="@+id/text_kosong_pesanan_dibatalkan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Belum Ada Data"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nuunito_bold"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_penghasilan_saya_batalkan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="15dp"/>

</LinearLayout>