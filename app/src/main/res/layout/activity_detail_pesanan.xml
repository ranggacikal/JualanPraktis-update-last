<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.pesanan_saya.DetailPesananActivity">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/shimmer">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ScrollView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/ll_harga1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="6dp"
                            app:cardElevation="3dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="12dp"
                                android:orientation="vertical">

                                <TextView
                                    android:visibility="gone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Data Penerima Barang"
                                    android:textColor="@color/colorPrimary"
                                    style="@style/TextAppearance.AppCompat.Subhead"
                                    android:gravity="center_horizontal"/>

                                <View
                                    android:layout_width="100dp"
                                    android:layout_height="10dp"
                                    android:text="Nama Penerima"
                                    android:background="@color/common_google_signin_btn_text_light_disabled"
                                    android:layout_marginTop="10dp"/>
                                <View
                                    android:layout_width="150dp"
                                    android:layout_height="10dp"
                                    android:layout_marginLeft="2dp"
                                    android:background="@color/common_google_signin_btn_text_light_disabled"
                                    android:layout_marginTop="2dp"/>

                                <View
                                    android:layout_width="100dp"
                                    android:layout_height="10dp"
                                    android:text="Nama Penerima"
                                    android:background="@color/common_google_signin_btn_text_light_disabled"
                                    android:layout_marginTop="10dp"/>
                                <View
                                    android:layout_width="150dp"
                                    android:layout_height="10dp"
                                    android:layout_marginLeft="2dp"
                                    android:background="@color/common_google_signin_btn_text_light_disabled"
                                    android:layout_marginTop="2dp"/>
                                <View
                                    android:layout_width="100dp"
                                    android:layout_height="10dp"
                                    android:text="Nama Penerima"
                                    android:background="@color/common_google_signin_btn_text_light_disabled"
                                    android:layout_marginTop="10dp"/>
                                <View
                                    android:layout_width="150dp"
                                    android:layout_height="10dp"
                                    android:layout_marginLeft="2dp"
                                    android:background="@color/common_google_signin_btn_text_light_disabled"
                                    android:layout_marginTop="2dp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Barang yang dipesan"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorPrimary"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:gravity="center_horizontal"/>

                        <include layout="@layout/shimmer_linear_item"/>
                        <include layout="@layout/shimmer_linear_item"/>
                        <include layout="@layout/shimmer_linear_item"/>
                    </LinearLayout>

                </ScrollView>

                <LinearLayout
                    android:id="@+id/ll_harga1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                    <View
                        android:layout_width="150dp"
                        android:layout_height="10dp"
                        android:layout_alignParentStart="true"
                        android:background="@color/common_google_signin_btn_text_light_disabled"
                        android:layout_marginTop="10dp"/>
                    <View
                        android:layout_width="150dp"
                        android:layout_height="10dp"
                        android:layout_alignParentEnd="true"
                        android:background="@color/common_google_signin_btn_text_light_disabled"
                        android:layout_marginTop="10dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <View
                            android:layout_width="150dp"
                            android:layout_height="10dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="10dp"
                            android:background="@color/common_google_signin_btn_text_light_disabled" />
                        <View
                            android:layout_width="150dp"
                            android:layout_height="10dp"
                            android:layout_alignParentEnd="true"
                            android:background="@color/common_google_signin_btn_text_light_disabled"
                            android:layout_marginTop="10dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <View
                            android:layout_width="150dp"
                            android:layout_height="10dp"
                            android:layout_alignParentStart="true"
                            android:background="@color/common_google_signin_btn_text_light_disabled"
                            android:layout_marginTop="10dp"/>
                        <View
                            android:layout_width="150dp"
                            android:layout_height="10dp"
                            android:layout_alignParentEnd="true"
                            android:background="@color/common_google_signin_btn_text_light_disabled"
                            android:layout_marginTop="10dp"/>
                    </RelativeLayout>


                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout">
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ll_harga">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="3dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Data Penerima Barang"
                            android:textColor="@color/colorPrimary"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:gravity="center_horizontal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Penerima"
                            style="@style/TextAppearance.AppCompat.Body2"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/lbl_nama"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Shofwan"
                            android:layout_marginLeft="2dp"
                            android:textColor="@color/com_facebook_blue"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:layout_marginTop="2dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alamat Lengkap"
                            style="@style/TextAppearance.AppCompat.Body2"
                            android:layout_marginTop="8dp"/>
                        <TextView
                            android:id="@+id/lbl_alamat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Taman pagelaran jl Paus Blok BB3 No 5 RT 04 RW 010 Kelurahan Padasuka"
                            android:layout_marginLeft="2dp"
                            android:textColor="@android:color/darker_gray"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:layout_marginTop="2dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nomor Resi Pengiriman"
                            style="@style/TextAppearance.AppCompat.Body2"
                            android:layout_marginTop="8dp"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="2dp">
                        <TextView
                            android:id="@+id/lbl_nomor_resi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="Belum diinput admin"
                            android:textColor="@android:color/holo_green_dark"
                            style="@style/TextAppearance.AppCompat.Body1"/>

                            <Button
                                android:id="@+id/btn_lacak"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:visibility="gone"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/buttonstylegreen"
                                android:textColor="@android:color/white"
                                android:text="Lacak"/>
                        </RelativeLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Barang yang dipesan"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimary"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:gravity="center_horizontal"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recyclerView"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp">
            <TextView
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                style="@style/TextAppearance.AppCompat.Body1"
                android:text="Nominal Belanja"
                android:layout_marginTop="2dp"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/lbl_nominal_belanja"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                style="@style/TextAppearance.AppCompat.Body2"
                android:text="0"
                android:layout_marginTop="2dp"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                style="@style/TextAppearance.AppCompat.Body1"
                android:text="Ongkir"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_nominal_belanja"/>

            <TextView
                android:id="@+id/lbl_nominal_ongkir"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                style="@style/TextAppearance.AppCompat.Body2"
                android:text="0"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_nominal_belanja"/>

            <TextView
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                style="@style/TextAppearance.AppCompat.Body1"
                android:text="Berat"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_nominal_ongkir"/>

            <TextView
                android:id="@+id/lbl_berat"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                style="@style/TextAppearance.AppCompat.Body2"
                android:text="0"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_nominal_ongkir"/>

            <TextView
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                style="@style/TextAppearance.AppCompat.Body2"
                android:text="Total (belanja + ongkir)"
                android:layout_marginTop="16dp"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_berat"/>

            <TextView
                android:id="@+id/lbl_nominal_total"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                style="@style/TextAppearance.AppCompat.Medium"
                android:text="0"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_berat"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>