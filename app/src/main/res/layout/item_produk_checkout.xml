<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <ImageView
                android:id="@+id/img_produk_checkout"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/ic_launcher" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_nama_barang_checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nuunito_bold"
                android:text="NAMA BARANG"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nuunito_bold"
                    android:text="Variasi : "
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/text_variasi_checkout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nuunito_bold"
                    android:text="Variasi barang"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/hargaProdukRincian"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Harga Produk : "
                    android:fontFamily="@font/nuunito_light"
                    android:textColor="@color/colorPrimary"
                    android:textSize="7sp"/>

                <TextView
                    android:id="@+id/text_harga_produk_checkout"
                    android:layout_width="55dp"
                    android:layout_toRightOf="@id/hargaProdukRincian"
                    android:layout_height="wrap_content"
                    android:text="Rp.000.000"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/nuunito_light"
                    android:textColor="@color/colorPrimary"
                    android:textSize="7sp"/>

                <TextView
                    android:id="@+id/text_jumlah_produk_checkout"
                    android:layout_width="20dp"
                    android:layout_toRightOf="@id/text_harga_produk_checkout"
                    android:layout_height="wrap_content"
                    android:text="x0"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/nuunito_light"
                    android:textColor="@color/colorPrimary"
                    android:textSize="7sp"/>

                <TextView
                    android:id="@+id/text_total_produk_checkout"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="Rp. 0.000.000"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/nuunito_light"
                    android:textColor="@color/colorPrimary"
                    android:textSize="7sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/hargaJualRincian"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Harga Jual : "
                    android:fontFamily="@font/nuunito_light"
                    android:textColor="@color/colorPrimary"
                    android:textSize="7sp"/>

                <TextView
                    android:id="@+id/text_harga_jual_checkout"
                    android:layout_width="55dp"
                    android:layout_toRightOf="@id/hargaJualRincian"
                    android:layout_height="wrap_content"
                    android:text="Rp.000.000"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/nuunito_light"
                    android:textColor="@color/colorPrimary"
                    android:textSize="7sp"/>

                <TextView
                    android:id="@+id/text_jumlah_harga_jual_checkout"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="15dp"
                    android:layout_toRightOf="@id/text_harga_jual_checkout"
                    android:fontFamily="@font/nuunito_light"
                    android:text="x0"
                    android:textColor="@color/colorPrimary"
                    android:textSize="7sp"/>

                <TextView
                    android:id="@+id/text_total_harga_jual_checkout"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="Rp. 0.000.000"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/nuunito_light"
                    android:textColor="@color/colorPrimary"
                    android:textSize="7sp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/KeuntunganRincian"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Keuntungan : "
                    android:textStyle="bold"
                    android:fontFamily="@font/nuunito_light"
                    android:textColor="@color/colorPrimary"
                    android:textSize="9sp"/>

                <TextView
                    android:id="@+id/text_keuntungan_checkout"
                    android:layout_width="55dp"
                    android:layout_toRightOf="@id/KeuntunganRincian"
                    android:layout_height="wrap_content"
                    android:text="Rp.000.000"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/nuunito_reguler"
                    android:textColor="@color/colorPrimary"
                    android:textSize="9sp"/>

                <TextView
                    android:id="@+id/text_jumlah_keuntungan_checkout"
                    android:layout_width="20dp"
                    android:layout_toRightOf="@id/text_keuntungan_checkout"
                    android:layout_height="wrap_content"
                    android:text="x0"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/nuunito_reguler"
                    android:textColor="@color/colorPrimary"
                    android:textSize="9sp"/>

                <TextView
                    android:id="@+id/text_total_keuntungan_checkout"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Rp. 0.000.000"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/nuunito_reguler"
                    android:textColor="@color/colorPrimary"
                    android:textSize="9sp"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>