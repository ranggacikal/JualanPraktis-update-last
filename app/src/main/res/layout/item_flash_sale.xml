<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/img_item_flash_sale"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@color/white" />

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/asset_diskon_flashsale"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_diskon_flashsale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nuunito_bold"
                android:text="00%"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_diskon_flashsale"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/nuunito_bold"
                android:text="OFF"
                android:textColor="@color/white"
                android:textSize="14sp" />


        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_nama_produk_flash_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nuunito_reguler"
            android:maxLines="2"
            android:text="NAMA PRODUK"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_harga_asli_flash_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nuunito_reguler"
            android:text="harga asli"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/text_harga_diskon_flash_sale"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nuunito_bold"
                android:text="Rp200.000.000"
                android:layout_centerVertical="true"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btn_beli_flashsale"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/rectangle_red"
                android:text="BELI"
                android:fontFamily="@font/nuunito_bold"
                android:textColor="@color/white"/>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            app:cardBackgroundColor="@color/lightDark"
            android:layout_marginTop="7dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="@drawable/background_time_flashsale">

                <TextView
                    android:id="@+id/text_dibeli_flashsale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="55 Dibeli"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:fontFamily="@font/nuunito_bold"
                    android:textAlignment="center"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>