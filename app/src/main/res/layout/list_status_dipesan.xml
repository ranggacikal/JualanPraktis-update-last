<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/text_list_id_status_transaksi_dipesan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/nuunito_bold"
                android:text="#ID1010101"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/text_list_tanggal_status_transaksi_dipesan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/nuunito_bold"
                android:text="00 Desember 2020"
                android:textColor="@android:color/black"
                android:textSize="10sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:id="@+id/garis_grey"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <ImageView
                    android:id="@+id/img_list_gambar_status_transaksi_dipesan"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_list_nama_status_transaksi_dipesan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nuunito_bold"
                    android:text="Nama Barang"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Variasi : "
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/nuunito_bold"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/text_list_variasi_status_transaksi_dipesan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nuunito_bold"
                        android:layout_marginLeft="5dp"
                        android:text="Variasi"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/text_hargaproduk_status_transaksi_dipesan"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nuunito_bold"
                        android:text="Harga Produk :"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/text_list_hargaproduk_status_transaksi_dipesan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nuunito_bold"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/text_hargaproduk_status_transaksi_dipesan"
                        android:text="Rp.000"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_hargajual_status_transaksi_dipesan"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nuunito_bold"
                        android:text="Harga Jual :"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/text_list_hargajual_status_transaksi_dipesan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nuunito_bold"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/text_hargajual_status_transaksi_dipesan"
                        android:text="Rp.000"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/text_keuntungan_status_transaksi_dipesan"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nuunito_bold"
                        android:text="Keuntungan :"
                        android:textColor="#000"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_list_keuntungan_status_transaksi_dipesan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nuunito_bold"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/text_keuntungan_status_transaksi_dipesan"
                        android:text="Rp.000"
                        android:textColor="#000"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_list_status_transaksi_dipesan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/nuunito_bold"
                        android:layout_marginRight="20dp"
                        android:text="Dipesan"
                        android:textSize="10sp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/linear_list_produk_lain_status_dipesan"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_produk_lainnya_dipesan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0 Produk Lainnya"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>