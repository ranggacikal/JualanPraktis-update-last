<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".feature.akun.DiterimaFragment">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerDiterima"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingBottom="10dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/shimmer_linear_item"/>
            <include layout="@layout/shimmer_linear_item"/>
            <include layout="@layout/shimmer_linear_item"/>
            <include layout="@layout/shimmer_linear_item"/>
        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <TextView
        android:id="@+id/text_kosong_diterima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Belum Ada Data"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_status_transaksi_diterima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/garis_grey"
        android:layout_marginTop="20dp"/>

</LinearLayout>